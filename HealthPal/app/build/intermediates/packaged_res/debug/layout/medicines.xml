<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Home">


    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/medicineId"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:textSize="20dp"
            app:srcCompat="@drawable/pill" />





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/medicine_name"
                android:layout_width="60dp"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Aspirin"
                android:textColor="@android:color/black" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: "
                android:textColor="@android:color/black" />






        </LinearLayout>


        <TextView
            android:id="@+id/medicine_quantity"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:maxLines="1"
            android:text="2"
            android:textColor="@android:color/black" />


        <ImageButton
            android:id="@+id/plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/medicine_quantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/addition" />


        <ImageButton
            android:id="@+id/minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            app:srcCompat="@drawable/minus" />

        />

        <ImageButton
            android:id="@+id/delete_medic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:textSize="20dp"
            app:srcCompat="@drawable/ic_baseline_delete_24" />

        />

        <ImageButton
            android:id="@+id/alarm"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:textSize="20dp"
            app:srcCompat="@drawable/ic_baseline_alarm_add_24" />

        />

    </LinearLayout>






</LinearLayout>